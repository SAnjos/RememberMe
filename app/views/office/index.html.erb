<script type="text/javascript">

   $().ready(function(){

     initialization();
     //SetupRightMenu();
     preparaPirobox();
     showNotes();

   });

   function preparaPirobox(){
     try{
       var viewTrash = '<%=(render "note/viewTrash").gsub("\n", "<br />") %>';
       setPirobox(viewTrash);
     }catch(e){
       raiseException(e);
     }
   }

   function showNotes(){
     function loadObjects(){
       <% @note.each do |n| %>
         <%="NewNote( #{n.posX}, #{n.posY}, \"#{n.conteudo.gsub("\n", "<br />")}\", #{n.width}, #{n.height}, false, true, \"#{n.UUID}\" );"%>
       <% end %>
     }

      window.setTimeout(loadObjects(),4000);
   }

</script>